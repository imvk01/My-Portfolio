import React, { useState } from "react";
import { Link, useLocation } from "react-router-dom";
import { Menu } from "lucide-react";
import MobileNavbar from "./MobileNavbar";
import logo from "./logo/logo.jpg";
import resumeFile from "./download/Vikash_CV.pdf";

export default function Header() {
  const [isOpen, setIsOpen] = useState(false);
  const location = useLocation();

  const navLinks = [
    { name: "About", path: "/about" },
    { name: "Projects", path: "/projects" },
    { name: "Recommendations", path: "/contact-me" },
    { name: "Contact Me", path: "/contact-me" },
  ];

  return (
    <header className="fixed top-0 left-0 w-full bg-white/80 backdrop-blur-md shadow-sm z-50 p-5" >
      
      {/* Mobile Sidebar */}
      <MobileNavbar isOpen={isOpen} setIsOpen={setIsOpen} />

      {/* Main Navbar */}
      <div className="relative flex items-center max-w-8xl mx-auto px-4 md:px-10 py-3">

        {/* LEFT SIDE - Desktop Navigation */}
        <nav className="hidden md:flex items-center gap-8 font-semibold text-gray-800">
          {navLinks.map((link) => (
            <Link
              key={link.name}
              to={link.path}
              className={`uppercase font-serif transition-all duration-200 hover:text-indigo-500 ${
                location.pathname === link.path
                  ? "text-indigo-600"
                  : ""
              }`}
            >
              {link.name}
            </Link>
          ))}
        </nav>

        {/* CENTER - Logo */}
        <div className="absolute left-1/2 transform -translate-x-1/2">
          <Link to="/" className="flex items-center">
            <img
              src={logo}
              alt="Vikash Verma Logo"
              className="w-16 h-16 md:w-20 md:h-20 object-scale-down rounded-full border border-gray-300 shadow-sm hover:scale-105 transition-transform duration-300"
            />
          </Link>
        </div>

        {/* RIGHT SIDE - Download CV */}
        <div className="hidden md:flex ml-auto">
          <a
            href={resumeFile}
            download="Vikash_CV.pdf"
            className="bg-gradient-to-r from-blue-600 to-indigo-600 
                       text-white px-5 py-2 rounded-full 
                       font-medium shadow-md 
                       hover:shadow-lg hover:scale-105 
                       transition-all duration-300"
          >
            Download CV
          </a>
        </div>

        {/* Mobile Menu Button */}
        <button
          className="md:hidden ml-auto text-gray-800"
          onClick={() => setIsOpen(true)}
        >
          <Menu size={28} />
        </button>

      </div>
    </header>
  );
}